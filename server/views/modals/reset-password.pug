#set-password.modal
	.modal-dialog
		.modal-content
			.modal-header
				h4.modal-title Resetar senha
				button.close(type='button', data-dismiss='modal', aria-label='Close')
					span(aria-hidden='true') Ã—
			.modal-body
				form(method="post")#set-password-form
